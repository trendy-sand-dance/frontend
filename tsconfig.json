{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
	  "target": "ES6",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "noEmitOnError": true, // Stops compiling if it runs into errors
	  "outDir": "./dist",
	  "rootDir": "./server",
	  "strict": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "resolveJsonModule": true,
	  "noImplicitAny": false,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["server/**/*", "server/types.d.ts", "server"],
	"exclude": ["public/node_modules"]
}
