<script>
  if (!window.sidebarScriptLoaded) {
    window.sidebarScriptLoaded = true;
  let prevcontent = 0;
  
  function toggleSidebar(newcontent) {
    const sidebar = document.getElementById('sidebar');
    const chatInput = document.getElementById('sidebar-content-chat');
    if (!sidebar) return;
    
    if (chatInput) { // Makes the chat input only pop up when chat sidebar is toggled
      if (newcontent == 1) {
        chatInput.style.display = "block";
      } else {
        chatInput.style.display = "none";
      }
    }
    
    const isHidden = sidebar.classList.contains('hidden');
    const isSameContent = prevcontent === newcontent;
    
    if (isHidden || !isSameContent) {
      // Opening or switching content
      sidebar.classList.remove('hidden', 'animate-slide-out');
      sidebar.classList.add('animate-slide-in');
      prevcontent = newcontent;
      history.pushState({ sidebarVisible: true, content: newcontent }, '');
    } else {
      // Closing - animate out then hide
      sidebar.classList.remove('animate-slide-in');
      sidebar.classList.add('animate-slide-out');
      
      // Wait for animation to complete before hiding
      setTimeout(() => {
        sidebar.classList.add('hidden');
        sidebar.classList.remove('animate-slide-out');
      }, 300); // Match your animation duration
      
      history.pushState({ sidebarVisible: false, content: newcontent }, '');
    }
  }
  
  // Listen to browser navigation (back/forward)
  window.addEventListener('popstate', (event) => {
    const sidebar = document.getElementById('sidebar');
    if (!sidebar) return;
    const state = event.state;
    if (state) {
      prevcontent = state.content;
      if (state.sidebarVisible) {
        sidebar.classList.remove('hidden', 'animate-slide-out');
        sidebar.classList.add('animate-slide-in');
      } else {
        sidebar.classList.remove('animate-slide-in');
        sidebar.classList.add('animate-slide-out');
        setTimeout(() => {
          sidebar.classList.add('hidden');
          sidebar.classList.remove('animate-slide-out');
        }, 300);
      }
    }
  });
  }
</script>

